{% extends 'BlogFrontBundle::general.html.twig' %}
    {# set article = app.request.get("article") #}
    {% block body %}
        <p>{{ content }}</p>
        <div>
        <div style="margin: 0 auto; width: 100%; height: 100%">
            <h3>{{ article.title | capitalize }}</h3>
            <p><i>{{ article.user.name }}</i>&nbsp;&nbsp;{{ article.datePublish | date("d/m/Y", "Europe/Paris") }}</p>
            <p>{{ article.text | reverse }}</p>
            <div style="width: 100%">
            <h4>Commentaires :</h4>
                {% for value in comments %}
                    <p><i>{{ value.title }}</i></p>
                    <p style="text-align: justify;">{{ value.description }}</p>
                {% endfor %}
            </div>
        </div>
        </div>
    {% endblock %}
