<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Template General{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('bundles/framework/css/bootstrap.css') }}" type="text/css" rel="stylesheet">
        <link href="{{ asset('bundles/framework/css/bootstrap-theme.css') }}" type="text/css" rel="stylesheet">
    {% endblock %}
</head>
<body>
<div class="container">
{% block header %}
    <header class="page-header">
        <nav class="navbar navbar-inverse">
            <div class="navbar-header">
                <h1 class="navbar-brand">Nom du Blog</h1>
            </div>
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('route_index') }}"><img src="{{ asset('favicon.ico') }}"></a></li>
                    <li><a href="{{ path('route_about') }}">A Propos</a></li>
                    <li><a href="{{ path('route_users') }}">Utilisateurs</a></li>
                    <li><a href="{{ path('route_show', {'nbPosts' : 3}) }}">Derniers Posts</a></li>
                    <li><a href="{{ path('route_view', {'id' : 1}) }}">Post</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Administration<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('route_edit_post', {'id' : 1}) }}">Edit post</a></li>
                            <li><a href="{{ path('route_add_post') }}">Add post</a></li>
                            <li><a href="{{ path('route_delete_comment') }}">Delete comment</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

    </header>
{% endblock %}
{% block body %}{% endblock %}

{% block footer %}
    <footer>&copy; Copyright 2017</footer>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('bundles/framework/js/bootstrap.js') }}"></script>
{% endblock %}
</div>
</body>
</html>
